# Grow Monitoring System - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# ============================================
# General Configuration
# ============================================
NODE_ENV=production

# ============================================
# MongoDB Configuration
# ============================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your-secure-mongodb-password-here
MONGO_INITDB_DATABASE=growMonitoring
MONGODB_URI=mongodb://admin:your-secure-mongodb-password-here@mongodb:27017/growMonitoring?authSource=admin

# ============================================
# Backend API Configuration
# ============================================
PORT=3000
API_URL=http://backend:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,https://yourdomain.com

# ============================================
# MQTT Broker Configuration
# ============================================
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ============================================
# Camera Configuration
# ============================================
# Camera URLs (comma-separated for multiple cameras)
CAMERA_URLS=http://camera1.local/stream,http://camera2.local/stream

# ============================================
# Notification Configuration
# ============================================
# Push Notifications (Web Push)
# Generate new keys with: node -e "const w=require('web-push');const k=w.generateVAPIDKeys();console.log('Public:',k.publicKey);console.log('Private:',k.privateKey);"
VAPID_PUBLIC_KEY=BCxBdgRFWMfpWDd76hD2WTa3IKm43q8QTU0VKiYQTl-5ZHZRRrUWpJ8jhidgbiSRHX1sGPk2ia9zt_YHvIamE4Y
VAPID_PRIVATE_KEY=rLlYPJfNN4fGbvFfU64YpSocA0o0-vB7fQ0Tn9I1owc
VAPID_SUBJECT=mailto:your-email@example.com

# Webhook URL (optional)
WEBHOOK_URL=

# ============================================
# Grafana Configuration
# ============================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your-secure-grafana-password-here
GF_SERVER_ROOT_URL=http://localhost:3001

# ============================================
# Backup Configuration
# ============================================
BACKUP_DIR=/backups
RETENTION_DAYS=30

# ============================================
# SSL/TLS Configuration (if using HTTPS)
# ============================================
# Leave empty if using HTTP only
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================
# Timelapse Configuration
# ============================================
TIMELAPSE_INTERVAL=3600000
TIMELAPSE_ENABLED=true
TIMELAPSE_QUALITY=85

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_RETENTION_TIME=15d
GRAFANA_ALLOW_SIGN_UP=false

# ============================================
# System Configuration
# ============================================
# Set to true if running on Raspberry Pi
IS_RASPBERRY_PI=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Max upload file size (in MB)
MAX_FILE_SIZE=50

# ============================================
# Optional: External Services
# ============================================
# Weather API (optional)
WEATHER_API_KEY=
WEATHER_LOCATION=

# Cloud Storage (optional)
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=

# ============================================
# Development Overrides (comment out in production)
# ============================================
# VITE_API_URL=http://localhost:3000
# VITE_WS_URL=ws://localhost:3000
